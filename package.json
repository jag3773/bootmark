{
  "name": "bootmark",
  "author": "obedm503",
  "homepage": "https://obedm503.github.io/bootmark/",
  "description": "markdown + bootstrap as a jQuery plugin",
  "version": "0.8.0",
  "license": "MIT",
  "main": "dist/bootmark.min.js",
  "npmName": "bootmark",
  "npmFileMap": [
    {
      "basePath": "dist",
      "files": [
        "*"
      ]
    }
  ],
  "repository": "https://github.com/obedm503/bootmark.git",
  "scripts": {
    "serve":"http-server",
    "docs": "jsdoc2md > ./docs/DOCS.md",
    "build:js": "uglifyjs ./src/bootmark.js --output ./dist/bootmark.min.js --mangle --source-map ./dist/bootmark.min.js.map --comments  --stats --verbose --keep-fnames ",
    "build:css": "node-sass --output-style compressed --error-bell --source-map true ./src/bootmark.scss ./dist/bootmark.min.css",
    "build":"mkdir dist && npm run build:js && npm run build:css",
    "uglify-fetch":"uglifyjs ./node_modules/whatwg-fetch/fetch.js --output ./node_modules/whatwg-fetch/fetch.min.js",
    "bundle": "npm run build && npm run uglify-fetch && concat -o ./dist/bootmark.bundle.min.js ./node_modules/es6-promise/dist/es6-promise.min.js ./node_modules/whatwg-fetch/fetch.min.js ./node_modules/jquery/dist/jquery.min.js ./node_modules/bootstrap/dist/js/bootstrap.min.js ./node_modules/showdown/dist/showdown.min.js ./node_modules/google-code-prettify/bin/prettify.min.js ./node_modules/showdown-prettify/dist/showdown-prettify.min.js ./dist/bootmark.min.js"
  },
  "jsdoc2md": {
    "files": "src/*.js",
    "module-index-format": "grouped",
    "property-list-format": "list",
    "param-list-format": "list",
    "member-index-format": "grouped",
    "name-format": false,
    "example-lang": "md",
    "private": true
  },
  "dependencies": {
    "bootstrap": "^3.3.7",
    "color-themes-for-google-code-prettify": "^2.0.4",
    "es6-promise": "^3.3.1",
    "google-code-prettify": "^1.0.5",
    "jquery": "^3.1.0",
    "showdown": "^1.4.3",
    "showdown-prettify": "^1.3.0",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "concat": "^3.0.0",
    "jsdoc-to-markdown": "^2.0.1",
    "node-sass": "^4.5.0",
    "uglify-js": "^2.8.14",
    "http-server":""
  },
  "optionalDependencies": {},
  "engines": {
    "node": "*"
  }
}
